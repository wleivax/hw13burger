    <div class="flexbox-container">

        <div class="flexbox-container">
            <img src="https://patch.com/img/cdn/users/96076/2015/10/raw/20151056251c6340787.jpg?width=695">
            <h2>Add a New Burger</h2>
        
            <form class="burgerInput">
            <input type="text" id="newBurger" name="burger_name">
                <div class="flexbox-container">
                    <button type="submit" id="burgerBtn">Add Burger</button>
                </div>
            </form>
        </div>
        

        <div class="flexbox-item-2">            
            <ul id="uneaten">
                <h2> Eat the Burger! </h2>
                {{#each burger}}
                {{#unless devoured}}
                {{> burger/burger-block devoured=false}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="flexbox-item-3">
            <ul id="eaten">
                <h2>Burgers Eaten: </h2>
                {{#each burger}}
                {{#if devoured}}
                {{> burger/burger-block devoured=true}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
